{
    "manifest_version": 3,
    "name": "W3 Schools",
    "version": "1.0",
    "description": "Automatically clicks Next buttons until none are found",
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.w3schools.com/*", "https://w3schools.com/*"],
        "js": ["content.js"]
      }
    ]
  }